<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="RadioZonica.Controls.MenuItem"
      xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
      Padding="20,5,0,5" Margin="20,10,20,10" 
      ColumnSpacing="20">
    <Grid.RowDefinitions>
        <RowDefinition Height="40" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <ffimageloading:CachedImage Grid.Row="0" Grid.Column="0" x:Name="Icon" HeightRequest="40" />
    <Label Grid.Row="0" Grid.Column="1" x:Name="Label" FontAttributes="Bold" FontSize="Medium" TextColor="White" VerticalOptions="Center" />
</Grid>